extends layout

block title
  title API Explorer

block js
  script(src='js/api.js')

block css
  link(href='css/api.css', rel='stylesheet')

block content
  .page-header
    h1 Michigan API Explorer

  h2#v1 Version 1
  hr

  article#v1_news.api-endpoint
    div.api-request
      h3 GET /v1/article/:id/
    div.api-body
      p.api-info.
        Grabs data for a single article

      .api-options
        h4 Required
        .row.api-input-container
          .col-left
            label Id
            input(type='text', name='id', class='api-input', value='')
          .col-right
            p Unique article id

      div
        hr
        button(data-url='/v1/article/', class='btn animate green') Execute

      .row
        h4 Response
        pre.api-response

  article#v1_news.api-endpoint
    div.api-request
      h3 GET /v1/news/
    div.api-body
      p.api-info.
        Grabs the latest news articles from all news sources

      .api-options
        h4 Options
        .row.api-input-container
          include ./limit.jade

      div
        hr
        button(data-url='/v1/news/', class='btn animate green') Execute

      .row
        h4 Response
        pre.api-response

  article#v1_news_site.api-endpoint
    div.api-request
      h3 GET /v1/news/:site/
    div.api-body
      p.api-info.
        Grabs the latest news articles from a list of news sites

      .api-options
        h4 Options
        .row.api-input-container
          include ./site.jade

        .row.api-input-container
          include ./limit.jade

      div
        hr
        button(data-url='/v1/news/', class='btn animate green') Execute

      .row
        h4 Response
        pre.api-response

  article#v1_news_site_section.api-endpoint
    div.api-request
      h3 GET /v1/news/:site/:section/
    div.api-body
      p.api-info.
        Grabs the latest news articles from a list of news sites by section

      .api-options
        h4 Options
        .row.api-input-container
          include ./site.jade

        hr

        .row.api-input-container
          .col-left
            label Section
            input(type='text', name='section', class='api-input', value='sports')
          .col-right
            p Comma separated list of sections to grab news articles from.
            p Here is a list of acceptable sections:
            ul
              li home
              li news
              li sports
              li life

        .row.api-input-container
          include ./limit.jade

      div
        hr
        button(data-url='/v1/news/', class='btn animate green') Execute

      .row
        h4 Response
        pre.api-response

